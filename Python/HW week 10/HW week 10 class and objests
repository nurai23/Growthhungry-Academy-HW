
class bank_account:
  
  def init (self, bank_account_owner, initial_balance=0):
   self.bank_account_owner = bank_account_owner
   self.balance = initial_balance
   print(f"Account created for {self.bank_account_owner} with balance")

  def deposit(self, amount):
    if amount > 0:
      self.balance += amount
      print(f"Deposited ${amount}. New balance: ${self.balance}")
    else:
      print("Deposit amount must be positive")
      
    def withdraw(self, amount):
      if amount >0:
        if self.balance >= amount:
          self.balance -= amount
          print(f"Withdrew ${amount}. New balance: ${self.balance}")
        else:     
          print("Insufficient funds for withdrawal.")
      else: 
        print("Withdrawal amount must be positive") 


def display_balance(self):
  #Show the current balance
  print(f"Current balance for {self.bank_account_owner}: ${self.balance}")

#1 bank account owner
my_account = bank_account()
print("-")

my_account.deposit()
my_account.withdraw()
my_account.display_balance()
print("-")

my_account.withdraw()
print("-")

#2 bank account owner
another_account = bank_account("Ailin")
another_account.deposit(250)
another_account.display_balance

def display_balance(self):
  print(f"name:{self.name}")
  print(f"Balance: {self.balance}")